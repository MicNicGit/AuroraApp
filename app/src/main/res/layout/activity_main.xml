<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.myapplication.MainActivity">

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Aurora"
        android:id="@+id/button"
        android:onClick="myHandler"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: Unknown"
        android:id="@+id/LatText"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/AuroraText"
        android:layout_alignEnd="@+id/AuroraText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latititude: Unknown"
        android:id="@+id/LongText"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/LatText"
        android:layout_alignRight="@+id/AuroraText"
        android:layout_alignEnd="@+id/AuroraText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aurora Probablility: Unknown"
        android:id="@+id/AuroraText"
        android:layout_below="@+id/LongText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

</RelativeLayout>
